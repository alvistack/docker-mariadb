{
  "builders": [
    {
      "changes": [
        "ENV LANG=en_US.UTF-8",
        "ENV LC_ALL=en_US.UTF-8",
        "ENV SHELL=/bin/bash",
        "ENV TZ=UTC",
        "VOLUME /var/lib/mysql",
        "WORKDIR /var/lib/mysql",
        "EXPOSE 3389",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"mysqld\"]"
      ],
      "commit": true,
      "image": "ubuntu:24.04",
      "privileged": true,
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "export _ID=$(docker images | awk '{ print $3 }' | awk 'NR==2')",
        "mkdir -p output-docker",
        "docker save $_ID | gzip -9 > output-docker/image.tar.gz"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y ca-certificates curl gcc hostname iproute2 language-pack-en locales python3 sudo"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "set -eu",
        "groupadd -r -g 999 mysql",
        "useradd -r -g 999 -u 999 -d /nonexistent -s /bin/false -M mysql"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

